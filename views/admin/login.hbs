<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/adminLogin.css">
</head>
<body>
    <div class="login-card">
        <h2>Admin Login</h2>
        <form action="/admin/login" method="post" onsubmit="return formValidate(event)">
            <!-- Error message -->
            <h4 id="message" class="error-msg">{{message}}</h4>
            
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" autocomplete="off">
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-login">Login</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    <script>
        // Display the message if it exists
        {{#if message}}
            Toastify({
                text: "{{message}}",  // The message passed from the backend
                duration: 3000,
                gravity: "top", // Position on top
                position: "center", // Center horizontally
                style: {
                    background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                    color: "white",
                }
            }).showToast();
        {{/if}}

        // Form validation function
        function formValidate(event) {
            event.preventDefault(); // Prevent default form submission

            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();

            // Check if username or password is empty
            if (username === "" || password === "") {
                // Show a Toastify notification if fields are missing
                Toastify({
                    text: "All fields are required!",
                    duration: 3000,
                    gravity: "top", // Position on top
                    position: "center", // Center horizontally
                    style: {
                        background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                        color: "white",
                    }
                }).showToast();
                return false; // Prevent form submission
            }

            // If validation passes, submit the form
            event.target.submit();
            return true;
        }
    </script>
</body>
</html>
